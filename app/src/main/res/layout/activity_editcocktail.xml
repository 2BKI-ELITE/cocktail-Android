<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        >

        <TextView
            android:id="@+id/successscreen_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_Cocktail Title Title_"
            android:textSize="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>




    </RelativeLayout>


    <TextView
        android:id="@+id/editcocktail_tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginLeft="@dimen/_24sdp"/>
    <LinearLayout
        android:id="@+id/editcocktail_llName"
        android:layout_width="@dimen/_271sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_height="@dimen/_55sdp"
        android:orientation="vertical"
        android:background="@drawable/shapeshadow_white"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>
    <TextView
        android:id="@+id/editcocktail_tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beschreibung"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginLeft="@dimen/_24sdp"/>
    <LinearLayout
        android:id="@+id/editcocktail_llDescription"
        android:layout_width="@dimen/_271sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_height="@dimen/_90sdp"
        android:orientation="vertical"
        android:background="@drawable/shapeshadow_white"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>
    <TextView
        android:id="@+id/editcocktail_tvPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vorschaubild"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginLeft="@dimen/_24sdp"/>
    <RelativeLayout
        android:id="@+id/editcocktail_llPreview"
        android:layout_width="@dimen/_271sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_height="@dimen/_90sdp"
        android:orientation="vertical"
        android:background="@drawable/shapeshadow_white"
        android:layout_gravity="center_horizontal"
        >






        <ImageView
            android:id="@+id/editcocktail_imageView"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_27sdp"
            app:srcCompat="@drawable/test_cocktail_pic" />

        <Button
            android:id="@+id/editcocktail_btChoose"
            android:layout_width="@dimen/_112sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_alignLeft="@id/editcocktail_btRemove"
            android:background="@drawable/shapeshadow_greenish"
            android:textSize="@dimen/_8sdp"
            android:text="Bild auswÃ¤hlen"
            android:textColor="@android:color/background_light"/>


        <Button
            android:id="@+id/editcocktail_btRemove"
            android:layout_width="@dimen/_112sdp"
            android:layout_height="@dimen/_32sdp"

            android:layout_toRightOf="@id/editcocktail_imageView"
            android:layout_marginLeft="@dimen/_89sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@id/editcocktail_btChoose"
            android:background="@drawable/shapeshadow_redish"
            android:textSize="@dimen/_8sdp"
            android:text="Bild entfernen"
            android:textColor="@android:color/background_light"/>



    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cocktail_confirmedit_button"
        android:background="@null"
        android:layout_marginTop="@dimen/_78sdp"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/_14sdp"/>


</LinearLayout>