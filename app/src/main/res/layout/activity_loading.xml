<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    android:id="@+id/loading_mainlayout"
    tools:context=".screenactivities.LoadingActivity">

    <ImageView
        android:id="@+id/loading_ivCocktail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/cocktails_cocktail_icon"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:paddingBottom="@dimen/_4sdp"
        android:textColor="?attr/textcolorPrimary"
        android:text="Projektarbeit des 2BKI2 2020\nMaximilian König, Maurice Klusch, Ron Brütsch, Julius Radke"/>
</RelativeLayout>