<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addcocktail_clTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/addcocktail_btBack"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@null"
            android:paddingLeft="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cocktail_back_bt" />

        <TextView
            android:id="@+id/addcocktail_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cocktail hinzufügen"
            android:textColor="?attr/textcolorPrimary"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/addcocktail_tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="8dp"
        android:text="Name"
        android:textColor="?attr/textcolorSecondary"
        app:layout_constraintBottom_toTopOf="@+id/addcocktail_llName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addcocktail_tvDescription"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/addcocktail_llName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="529dp"
        android:background="@drawable/shapeshadow_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addcocktail_tvName">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/addcocktail_tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Beschreibung"
        android:textColor="?attr/textcolorSecondary"
        app:layout_constraintBottom_toTopOf="@+id/addcocktail_llDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addcocktail_tvPreview"
        app:layout_constraintTop_toBottomOf="@+id/addcocktail_llName" />

    <LinearLayout
        android:id="@+id/addcocktail_llDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/shapeshadow_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/addcocktail_tvPreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addcocktail_tvDescription">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/addcocktail_tvPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="8dp"
        android:text="Vorschaubild"
        android:textColor="?attr/textcolorSecondary"
        app:layout_constraintBottom_toTopOf="@+id/addcocktail_llPreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addcocktail_llPreview"
        app:layout_constraintTop_toBottomOf="@+id/addcocktail_llDescription" />

    <RelativeLayout
        android:id="@+id/addcocktail_llPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="101dp"
        android:background="@drawable/shapeshadow_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addcocktail_tvPreview">


        <ImageView
            android:id="@+id/addcocktail_imageView"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_27sdp"
            app:srcCompat="@drawable/test_cocktail_pic" />

        <Button
            android:id="@+id/addcocktail_btChoose"
            android:layout_width="@dimen/_112sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_alignLeft="@id/addcocktail_btRemove"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/shapeshadow_greenish"
            android:text="Bild auswählen"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/_8sdp" />


        <Button
            android:id="@+id/addcocktail_btRemove"
            android:layout_width="@dimen/_112sdp"
            android:layout_height="@dimen/_32sdp"

            android:layout_below="@id/addcocktail_btChoose"
            android:layout_marginLeft="@dimen/_89sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@id/addcocktail_imageView"
            android:background="@drawable/shapeshadow_redish"
            android:text="Bild entfernen"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/_8sdp" />


    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="19dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addcocktail_llPreview"
        app:srcCompat="@drawable/cocktail_confirmedit_button" />


</androidx.constraintlayout.widget.ConstraintLayout>