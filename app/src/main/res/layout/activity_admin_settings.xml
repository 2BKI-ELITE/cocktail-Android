<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screenactivities.admin.SettingsActivity"
    android:background="?attr/backgroundcolor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsscreen_clTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp">

        <TextView
            android:id="@+id/settings_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Einstellungen"
            android:textColor="?attr/textcolorPrimary"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/settings_ibConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cocktail_confirmedit_button"
            android:background="@null"
            android:layout_marginTop="@dimen/_200sdp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_14sdp"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/usereditscreen_llOfAge"
        android:layout_width="@dimen/_271sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_24sdp"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/myrect"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settingsscreen_tvServicing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="Wartungsmodus"
            android:textColor="?attr/textcolorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/settings_swMaintenance"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/_220sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/usereditscreen_llAdminAccess"
        android:layout_width="@dimen/_271sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_24sdp"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/myrect"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settingsscreen_tvAlcoholWithoutAuth"
            android:gravity="center_vertical"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Alkoholhaltige Cocktails nur durch erfolgreiche Authentifikation"
            android:textColor="?attr/textcolorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/settings_swAlcohol"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/_220sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_clLightIdle"
        android:layout_width="@dimen/_271sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_24sdp"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/myrect"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_tvLightIdle"
            android:gravity="center_vertical"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Beleuchtung bei Idle"
            android:textColor="?attr/textcolorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/settings_vColorIdle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:layout_marginLeft="@dimen/_220sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_clLightInProgress"
        android:layout_width="@dimen/_271sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_24sdp"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/myrect"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_tvLightInProgress"
            android:gravity="center_vertical"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Beleuchtung bei Bearbeitung"
            android:textColor="?attr/textcolorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/settings_vColorInProgress"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:layout_marginLeft="@dimen/_220sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_clLightSuccess"
        android:layout_width="@dimen/_271sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_24sdp"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/myrect"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_tvLightSuccess"
            android:gravity="center_vertical"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Beleuchtung bei Erfolg"
            android:textColor="?attr/textcolorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/settings_vColorSuccess"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:layout_marginLeft="@dimen/_220sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_clLightError"
        android:layout_width="@dimen/_271sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_24sdp"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/myrect"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_tvLightError"
            android:gravity="center_vertical"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Beleuchtung bei Fehler"
            android:textColor="?attr/textcolorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/settings_vColorError"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:layout_marginLeft="@dimen/_220sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>