<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp">

        <TextView
            android:id="@+id/useraddscreen_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benutzer hinzufügen"
            android:textColor="?attr/textcolorPrimary"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/useraddscreen_tvRFID"
        android:layout_width="@dimen/_271sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginLeft="@dimen/_24sdp"
        android:layout_height="wrap_content"
        android:text="RFID Token"
        android:textColor="?attr/textcolorSecondary"/>

    <LinearLayout
        android:id="@+id/useraddscreen_llRFID"
        android:layout_width="@dimen/_271sdp"
        android:layout_height="@dimen/_50sdp"
        android:orientation="vertical"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/myrect"
        android:layout_gravity="center_horizontal">

        <TextView
            android:text="Test"
            android:textColor="?attr/textcolorSecondary"
            android:textSize="@dimen/_12sdp"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/useraddscreen_rfidCode"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/useraddscreen_llOfAge"
        android:layout_width="@dimen/_271sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_24sdp"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/myrect"
        android:orientation="vertical">

        <TextView
            android:id="@+id/useraddscreen_tvOfAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="Volljährig"
            android:textColor="?attr/textcolorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/useraddscreen_swAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_220sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/useraddscreen_llAdminAccess"
        android:layout_width="@dimen/_271sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_24sdp"
        android:orientation="vertical"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/myrect">

        <TextView
            android:id="@+id/useraddscreen_tvAdminAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="Admin-Zugang"
            android:textColor="?attr/textcolorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/useraddscreen_swAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_220sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/useraddscreen_ibConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cocktail_confirmedit_button"
        android:background="@null"
        android:layout_marginTop="@dimen/_200sdp"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/_14sdp"/>

</LinearLayout>