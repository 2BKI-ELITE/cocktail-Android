<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout18"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    tools:context=".screenactivities.ConfirmAgeActivity">


    <TextView
        android:id="@+id/confirmAge_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Alter bestätigen"
        android:textColor="?attr/textcolorPrimary"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/confirmAge_tvText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:gravity="center_horizontal"
        android:text="Bitte halte einen RFID-Chip\nan das Lesegerät"
        android:textColor="?attr/textcolorSecondary"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toTopOf="@+id/confirmAge_ivCocktail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/confirmAge_ivCocktail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cocktails_rfid_icon"
        app:layout_constraintBottom_toTopOf="@+id/confirmAge_tvText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/confirmAge_tvText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="277dp"
        android:gravity="center_horizontal"
        android:text="um dein Alter zu bestätigen"
        android:textColor="?attr/textcolorSecondary"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
