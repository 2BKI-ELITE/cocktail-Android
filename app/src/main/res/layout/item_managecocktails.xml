<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20sdp"
    android:background="?attr/backgroundcolor"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundcolor"
        >


        <RelativeLayout
            android:id="@+id/manageitem_background"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_120sdp"

            />

        <ImageView
            android:id="@+id/manageitem_ivCocktail"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_alignLeft="@id/manageitem_background"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_23sdp"
            android:scaleType="centerInside"
            tools:srcCompat="@drawable/test_cocktail_pic" />

        <TextView
            android:id="@+id/manageitem_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Screwdriver"
            android:textSize="@dimen/_19sdp"
            android:textColor="?attr/textcolorPrimary"
            android:layout_alignTop="@id/manageitem_ivCocktail"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_marginLeft="@dimen/_14sdp"
            android:layout_toRightOf="@+id/manageitem_ivCocktail"
            />

        <TextView
            android:id="@+id/manageitem_tvDescription"
            android:layout_width="@dimen/_176sdp"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet Lorem ipsum dolor sit amet Lorem ipsum dolor sit amet Lorem ipsum dolor sit amet "
            android:layout_alignLeft="@id/manageitem_tvTitle"
            android:textSize="@dimen/_11sdp"
            android:textColor="?attr/textcolorSecondary"
            android:layout_below="@id/manageitem_tvTitle"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toRightOf="@id/manageitem_ivCocktail"
             />


    </RelativeLayout>
</androidx.cardview.widget.CardView>