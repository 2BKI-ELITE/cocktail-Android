<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp">

        <TextView
            android:id="@+id/cleaningfinishedscreen_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Reinigung abgeschlossen"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_40sdp"
        app:srcCompat="@drawable/cocktails_success_icon" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cleaningfinishedscreen_clProceed"
        android:layout_width="@dimen/_235sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_40sdp">

        <TextView
            android:id="@+id/cleaningfinishedscreen_tvProceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vorgehen"
            android:textAlignment="center"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bitte schlieÃŸe nun alle Zutaten wieder an die richtigen Pumpen an. Zur Sicherheit werden dir die Zutaten mit den jeweiligen Pumpen unten angezeigt"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/cleaningfinishedscreen_tvProceed"
            app:layout_constraintLeft_toLeftOf=""
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cleaningfinishedscreen_clOrder"
        android:layout_width="@dimen/_235sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_40sdp">

        <TextView
            android:id="@+id/cleaningfinishedscreen_tvOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zuordnung der Zutaten"
            android:textAlignment="center"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="@dimen/_117sdp"
            android:layout_height="wrap_content"
            android:text="Pumpe 1 &#10; Pumpe 2 &#10; Pumpe3 &#10; Pumpe 4 &#10; Pumpe 5 &#10; Pumpe 6"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cleaningfinishedscreen_tvOrder" />

        <TextView
            android:layout_width=""
            android:layout_height=""
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>