<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screenactivities.FailedActivity"
    android:background="?attr/backgroundcolor">


    <TextView
        android:id="@+id/failedscreen_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="_Error Title_"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/failedscreen_ivFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cocktails_failed_icon"
        app:layout_constraintEnd_toEndOf="@+id/failedscreen_tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/failedscreen_tvTitle" />


    <TextView
        android:id="@+id/failedscreen_tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:text="This is a placeholder error message you will have to replace with the correct message"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/failedscreen_ivFailed" />

    <ImageButton
        android:id="@+id/failedscreen_btFinishmaking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cocktail_finishmaking_bt" />


</androidx.constraintlayout.widget.ConstraintLayout>