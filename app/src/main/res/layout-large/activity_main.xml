<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_110sdp"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_1sdp">

        <LinearLayout
            android:id="@+id/centerSpace"
            android:layout_width= "@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@null">
        </LinearLayout>

        <ImageButton
            android:id="@+id/cleanBt"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_toLeftOf="@id/centerSpace"
            app:srcCompat="@drawable/cocktail_manage_bt"
            />

        <ImageButton
            android:id="@+id/ingredientsBt"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_toRightOf="@id/centerSpace"
            android:scaleType="centerInside"
            android:background="@null"
            app:srcCompat="@drawable/cocktail_ingredients_bt" />

        <ImageButton
            android:id="@+id/cocktailsBt"
            android:layout_width="@dimen/_130sdp"
            android:layout_height= "@dimen/_130sdp"
            android:layout_below="@id/cleanBt"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="centerInside"
            android:layout_alignLeft="@id/cleanBt"
            android:background="@null"
            app:srcCompat="@drawable/cocktail_cleaning_bt" />
        <ImageButton
            android:id="@+id/fillLevelBt"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:scaleType="centerInside"
            android:layout_alignTop="@id/cocktailsBt"
            android:layout_alignLeft="@id/ingredientsBt"
            android:background="@null"
            app:srcCompat="@drawable/cocktail_statistics_bt" />

        <ImageButton
            android:id="@+id/statisticsBt"
            android:layout_width="@dimen/_130sdp"
            android:layout_height= "@dimen/_130sdp"
            android:layout_below="@id/fillLevelBt"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="centerInside"
            android:layout_alignLeft="@id/cleanBt"
            android:background="@null"
            app:srcCompat="@drawable/cocktail_settings_bt" />


    </RelativeLayout>
</LinearLayout>
