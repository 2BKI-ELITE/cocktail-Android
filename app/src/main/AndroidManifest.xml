<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cocktail_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:largeScreens="false"
        android:normalScreens="true"
        android:requiresSmallestWidthDp="600"
        android:smallScreens="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screenactivities.IngredientsActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".screenactivities.PieChartActitivty"
            android:screenOrientation="portrait"/>
        <activity android:name=".screenactivities.UserActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".screenactivities.CleanActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".screenactivities.AdminPanelActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".screenactivities.ManageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".screenactivities.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".screenactivities.InformationActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
