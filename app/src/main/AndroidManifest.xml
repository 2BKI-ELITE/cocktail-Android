<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cocktail_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:largeScreens="false"
        android:normalScreens="true"
        android:requiresSmallestWidthDp="600"
        android:smallScreens="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screenactivities.FailedActivity"></activity>
        <activity android:name=".screenactivities.SuccessActivity" />
        <activity android:name=".screenactivities.InProgressActivity" />
        <activity android:name=".screenactivities.ConfirmCocktail" />
        <activity android:name=".screenactivities.ChooseSizeActvitity" />
        <activity
            android:name=".screenactivities.admin.IngredientsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screenactivities.admin.PieChartActitivty"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screenactivities.admin.UserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screenactivities.admin.CleanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screenactivities.admin.AdminPanelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screenactivities.admin.ManageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screenactivities.InformationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screenactivities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screenactivities.NoConnectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screenactivities.LoadingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>